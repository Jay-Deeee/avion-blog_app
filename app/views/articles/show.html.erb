<h1><%= @article.title %></h1> <h6><%= link_to "Edit", edit_article_path(@article) %></h6>

<p><%= @article.body %></p>

<%= form_with url: article_path(@article), method: :delete, data: { turbo_confirm: "Are you sure?" } do %>
  <button type="submit" class="btn btn-danger">Delete</button>
<% end %>
<br>
<%= link_to "Back to Home", articles_path, type: "button", class: "btn btn-primary" %>

<h2>Comments</h2>
<%= render @article.comments.select(&:persisted?) %>

<h2>Add a comment:</h2>
<%= form_with model: [ @article, @comment ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
    <% @comment.errors.full_messages_for(:commenter).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% @comment.errors.full_messages_for(:body).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
