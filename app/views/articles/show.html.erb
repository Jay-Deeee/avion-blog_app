<h1><%= @article.title %></h1> <h6><%= link_to "Edit", edit_article_path(@article) %></h6>

<p><%= @article.body %></p>

<%= form_with url: article_path(@article), method: :delete, data: { turbo_confirm: "Are you sure?" } do %>
  <button type="submit" class="btn btn-danger">Delete</button>
<% end %>
<br>
<%= link_to "Back to Home", articles_path, type: "button", class: "btn btn-primary" %>

<h2>Comments</h2>
<%= render @article.comments.select(&:persisted?) %>

<h2>Add a comment:</h2>
<%= render "comments/form", article: @article, comment: @comment %>
